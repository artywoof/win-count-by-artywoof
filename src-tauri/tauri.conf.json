{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Win_Count_by_ArtYWoof",
  "version": "1.0.0",
  "identifier": "com.artywoof.wincount",
  "build": {
    "beforeDevCommand": "bun run dev:vite",
    "devUrl": "http://localhost:1421",
    "beforeBuildCommand": "bun run build:frontend",
    "frontendDist": "../build"
  },
  "app": {
    "windows": [
      {
        "title": "Win Count by ArtYWoof",
        "width": 496,
        "height": 796,
        "resizable": false,
        "fullscreen": false,
        "decorations": false,
        "transparent": true,
        "alwaysOnTop": true,
        "shadow": false,
        "hiddenTitle": true,
        "minWidth": 496,
        "minHeight": 796,
        "maxWidth": 496,
        "maxHeight": 796,
        "focus": false,
        "acceptFirstMouse": true,
        "titleBarStyle": "Overlay",
        "maximizable": false,
        "minimizable": true,
        "skipTaskbar": false,
        "closable": true,
        "visible": true
      }
    ],
    "trayIcon": {
      "id": "main",
      "iconPath": "icons/icon.png",
      "tooltip": "Win Count by ArtYWoof",
      "iconAsTemplate": false
    },
    "security": {
      "csp": null,
      "capabilities": [
        "default"
      ]
    }
  },
  "plugins": {
    "updater": {
      "active": true,
      "endpoints": [
        "https://github.com/artywoof/win-count-by-artywoof/releases/latest/download/latest.json"
      ],
      "dialog": false,
      "pubkey": "RWTS2shM0SQzI2EcfQLKZO/itZ1k+FvTpV36EYP5HCbD+YOa/lNdJH6K"
    },
    "globalShortcut": {
      "shortcuts": []
    }
  },
  "bundle": {
    "active": true,
    "targets": ["msi"],
    "publisher": "ArtYWoof",
    "copyright": "Copyright Â© 2024 ArtYWoof. All rights reserved.",
    "category": "Utility",
    "shortDescription": "Win Counter for TikTok Live Streamers",
    "longDescription": "A powerful and lightweight win counter application designed specifically for TikTok Live streamers. Features include real-time overlay, customizable hotkeys, and automatic win tracking.",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png", 
      "icons/128x128@2x.png",
      "icons/icon.png",
      "icons/icon.ico"
    ],
    "resources": ["../static"],
    "externalBin": [],
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": "",
      "tsp": false,
      "wix": {
        "language": ["en-US"],
        "template": null,
        "fragmentPaths": [],
        "componentRefs": [],
        "featureRefs": [],
        "mergeRefs": [],
        "skipWebviewInstall": false,
        "license": null,
        "enableElevatedUpdateInstall": true,
        "bannerPath": null,
        "dialogImagePath": null
      },
      "nsis": null
    }
  }
}
